<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.datasqrl</groupId>
    <artifactId>flink-jar-runner-uber-jar</artifactId>
    <version>${env.RUNNER_VERSION}</version>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <flink.version>1.19.1</flink.version>
        <jdbc.version>3.2.0-1.19</jdbc.version>
        <kafka.version>3.2.0-1.19</kafka.version>
        <iceberg.version>1.6.0</iceberg.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>flink-jar-runner</artifactId>
            <version>${env.RUNNER_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.flink</groupId>
            <artifactId>flink-connector-kafka</artifactId>
            <version>${kafka.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.flink</groupId>
            <artifactId>flink-connector-jdbc</artifactId>
            <version>${jdbc.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.flink</groupId>
            <artifactId>flink-avro-confluent-registry</artifactId>
            <version>${flink.version}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-lib-common</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-json</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-secure</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-time</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-text</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-flexible-json</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-flexible-csv</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
        <dependency>
            <groupId>com.datasqrl</groupId>
            <artifactId>sqrl-jdbc-1.19</artifactId>
            <version>${env.SQRL_VERSION}</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>central</id>
            <url>https://repo.maven.apache.org/maven2</url>
        </repository>
        <repository>
            <id>confluent</id>
            <url>https://packages.confluent.io/maven/</url>
        </repository>
        <repository>
            <id>datasqrl</id>
            <url>https://maven.pkg.github.com/DataSQRL/sqrl</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer
                                    implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.datasqrl.FlinkMain</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
